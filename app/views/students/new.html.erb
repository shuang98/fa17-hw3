<%= form_tag students_path do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:course_name, nil, placeholder: @placeholder_age) %>

  <%= label_tag(:sid, "Student ID") %>
  <%= text_field_tag(:sid, nil, placeholder: @placeholder_sid) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>